{{#if isManagingUserRole}}
  {{#if MR001IsPermitted }}
    <hr/>
    <div class="row">
        <div class="large-12 columns">
            <h4 align="center"> Assign Roles for {{userName}}</h4>
        </div>
    </div>

    <div class="row" align="center">
        <div class="large-10  large-centered columns">
            <div class="panel">
                <div class="row">
                    <div class="large-12 columns">
                        <br>
                        <!-- display a list of assigned roles names -->
                        <!-- for the current user                   -->
                        <table>
                          <tr>
                            <td>Role</td>
                            <td>Delete</td>
                          </tr>
                      {{#each userRoleModel as |oneRole|}}
                      <tr>
                              <td> {{oneRole.name}}</td>
                              <td><a href="#" class="button info tiny table" {{action 'deleteRole' oneRole.id ID}}>Delete</a></td>
                            </tr>
                      {{/each}}
                    </table>
                        <!-- display a dropdown list to assign a new  user role  -->
                        <br>
                        <select class="shortwidth" onchange={{action 'selectRole' value="target.value"}}>
                            <option value="" disabled selected> -- Select System Role --</option>
                          {{#each roleCodeModel as |roleChoice|}}
                              <option value={{roleChoice.id}}>{{roleChoice.name}}</option>
                          {{/each}}
                        </select>

                        <br> <br>
                        <a href="#" class="button primary tiny" {{action 'done'}}>Done</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <hr/>
{{else}}

    <div class="row">
        <div class="large-8 large-centered columns alert-box info radius">
            <p>This feature (MR001) is not allowed for your account, please contact the system administrator for more information.</p>
            <a href="#" class="button alert tiny" {{action 'done'}}>OK</a>
        </div>
    </div>

{{/if}}
{{else}}
  {{#edit-user ID=ID status=status}}
      <div class="large-4 columns">
          <ul class="circle">
            {{yield}}
          </ul>
      </div>
      <div class="large-2 columns">
          <a href="#" class="button primary tiny other" {{action 'manageRoles' ID}}>Manage Roles</a>
      </div>
  {{/edit-user  }}

{{/if}}


