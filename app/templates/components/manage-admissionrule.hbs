{{#if  isManagingAdmissionrule }}

<div class="row">
  <div class="large-12 columns">
    <br>
    <h4 align="center">Add New Admission Rule</h4>
    <hr/>
    <br>
    <fieldset>
      <legend>Please use the form below</legend>
      <br>
      <form>

        <div class="row">
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Description</span>
              </div>
              <div class="small-9 columns">
                {{input value=description  type="text" placeholder="enter description"}}
              </div>
            </div>
          </div>
        </div>


      </form>
    </fieldset>
    <br>
    <a href="#" class="button primary tiny" {{action 'saveAdmissionRule'}}>Save</a>
    <a href="#" class="button primary tiny" {{action 'cancelAdmissionRule'}}>Cancel</a>
  </div>
</div>



{{else}}
<div class="row">
  <div class="large-12 columns">
    <a href="#" class="button tiny notmain" {{action 'addAdmissionRule'}}>Add Admission Rule</a>
  </div>
</div>
{{/if}}