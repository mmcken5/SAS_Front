{{#if isManagingAcademicload}}
<div class="row">
  <div class="large-12 columns">
    <h4 align="center"> Manage Academicload</h4>
  </div>
</div>

<div class="row">
  <div class="large-10  large-centered columns">
    <div class="panel">
      {{#if isAddingNewAcademicload}}
      <h4>Add new Academicload</h4>
      <form>
        <div class="row">
          <div class="large-12 columns">
            <label>Name
              {{input value=name  type="text" }}
            </label>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="large-12 columns">
          <a href="#" class="button primary tiny" {{action 'saveNewAcademicload'}}>Save</a>
          <a href="#" class="button primary tiny" {{action 'cancelAddNewAcademicload'}}>Cancel</a>
        </div>
      </div>
      <br>
      {{else}}
      <table>
        <tr>
          <th>
            Academic Load
          </th>
          <th>
            Delete
          </th>
        </tr>
      {{#each academicloadModel as |oneAcademicload|}}
<!--       <div class="row">
        <li class="large-3 columns">  {{oneAcademicload.name}} </li>

        <div class="large-2 columns">
          {{delete-academicload ID=oneAcademicload.id}}
        </div>
      </div> -->

      <tr>
        <td>
          {{oneAcademicload.name}}
        </td>
        <td>
          {{delete-academicload ID=oneAcademicload.id}}
        </td>
      </tr>
      {{/each}}
    </table>
      <div class="row">
        <div class="large-12 columns">
          <br>
          <a href="#" class="button primary tiny full" {{action 'addNewAcademicload'}}>Add New Academic Load</a>
          <a href="#" class="button primary tiny" {{action 'doneAcademicload'}}>Done</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{else}}
<div class="large-2 columns">
  <a href="#" class="button round tiny" {{action 'manageAcademicload' }}>More</a>
</div>
{{/if}}



