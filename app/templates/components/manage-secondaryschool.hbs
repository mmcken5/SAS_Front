{{#if  isSecondaryschoolFormEditing }}

<div class="row">
  <div class="large-12 columns">
    <br>
    <h4 align="center">Add New Secondary School</h4>
    <hr/>
    <br>
    <fieldset>
      <legend>Please use the form below</legend>
      <br>
      <form>

        <div class="row">
          <div class="large-12 columns">

        <div class="large-12 columns">
            <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                    <span class="prefix">Student</span>
                </div>
                <div class="small-9 columns">
                    <select onchange={{action (mut selectedStudent) value="target.value"}}>
                        {{#each studentModel as |studentChoice|}}
                        <option value={{studentChoice.id}} selected={{eq selectedStudent studentChoice}}>{{studentChoice.number}}</option>
                        {{/each}}
                    </select>
                    <br>
                    <br>
                </div>
            </div>
        </div>

        
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Name</span>
              </div>
              <div class="small-9 columns">
                {{input value=name  type="text" placeholder="enter name"}}
              </div>
            </div>
          </div>
       

      </div>
    </div>

      </form>
    </fieldset>
    <br>
    <a href="#" class="button primary tiny" {{action 'saveSecondaryschool'}}>Save</a>
    <a href="#" class="button primary tiny" {{action 'cancelSecondaryschool'}}>Cancel</a>
  </div>
</div>



{{else}}
<div class="row">
  <div class="large-12 columns">
    <a href="#" class="button tiny notmain" {{action 'addSecondaryschool'}}>Add Secondary School</a>
  </div>
</div>
{{/if}}