{{#if isManagingCity}}
<div class="row">
  <div class="large-12 columns">
    <h4 align="center"> Manage City</h4>
  </div>
</div>

<div class="row">
  <div class="large-10  large-centered columns">
    <div class="panel">
      {{#if isAddingNewCity}}
      <h4>Add new City</h4>
      <form>
        <div class="row">
          <div class="large-12 columns">

            <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Province</span>
                </div>
                <!--<div>Hello {{countryID}} and {{countryChoice.id}}</div>-->
                <div class="small-9 columns">
                  <select onchange={{action (mut selectedProvince) value="target.value"}}>
                    {{#each provinceModel as |provinceChoice|}}
                    <option value={{provinceChoice.id}} selected={{eq selectedProvince provinceChoice}}>{{provinceChoice.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
            </div>

            <label>Name
              {{input value=selectedCity  type="text" }}
            </label>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="large-12 columns">
          <a href="#" class="button primary tiny" {{action 'saveNewCity'}}>Save</a>
          <a href="#" class="button primary tiny" {{action 'cancelAddNewCity'}}>Cancel</a>
        </div>
      </div>
      <br>
      {{else}}
      <table>
        <tr>
          <th>
            City
          </th>
          <th>
            Delete
          </th>
        </tr>
      {{#each cityModel as |oneCity|}}
<!--       <div class="row">
        <li class="large-3 columns">  {{oneCity.name}} </li>
        {{delete-city ID=oneCity.id }}
      </div> -->
      <tr>
        <td>
          {{oneCity.name}}
        </td>
        <td>
          {{delete-city ID=oneCity.id }}
        </td>
      </tr>
      {{/each}}
    </table>
      <div class="row">
        <div class="large-12 columns">
          <br>
          <a href="#" class="button primary tiny full" {{action 'addNewCity'}}>Add new city</a>
          <a href="#" class="button primary tiny" {{action 'doneCity'}}>Done</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{else}}
<div class="large-2 columns">
  <a href="#" class="button round tiny" {{action 'manageCity' }}>More</a>
</div>
{{/if}}



