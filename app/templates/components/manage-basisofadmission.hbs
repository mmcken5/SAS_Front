{{#if  isManagingBA}}


<div class="row">
  <div class="large-12 columns">
    <br>
    <h4 align="center">Add Basis of Admission</h4>
    <hr/>
    <br>
    <fieldset>
      <legend>Please use the form below</legend>
      <br>
      <form>

        <div class="row">
          

        	<div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Student</span>
                </div>
                <div class="small-9 columns">
                  <select onchange={{action (mut selectedStudent) value="target.value"}}>
                    {{#each studentModel as |studentChoice|}}
                    <option value={{studentChoice.id}} selected={{eq selectedStudent studentChoice}}>{{studentChoice.number}}</option>
                    {{/each}}
                  </select>
               </div>
           </div>
        </div>

		<div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Basis of Admission</span>
                </div>
                <div class="small-9 columns">
                  <select onchange={{action (mut selectedCode) value="target.value"}}>
                    {{#each basisofadmissioncodeModel as |codeChoice|}}
                    <option value={{codeChoice.id}} selected={{eq selectedCode codeChoice}}>{{codeChoice.name}}</option>
                    {{/each}}
                  </select>
               </div>
           </div>
        </div>


          <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Comment</span>
                </div>
                <div class="small-9 columns">
                {{input value=comment type="text"}}
              </div>
           	   </div>
           </div>

           <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Date</span>
                </div>
                <div class="small-9 columns">
                {{input value=date type="date"}}
              </div>
           	   </div>
           </div>


        </div>

      </form>
    </fieldset>
    <br>
    <a href="#" class="button primary tiny" {{action 'saveBA'}}>Save</a>
    <a href="#" class="button primary tiny" {{action 'cancelBA'}}>Cancel</a>
  </div>
</div>



{{else}}

<div class="row">
  <div class="large-12 columns">
    <a href="#" class="button tiny notmain" {{action 'addBA'}}>Add Basis of Admission to a Student</a>
  </div>
</div>

{{/if}}