{{#if  isHighschoolsubjectFormEditing }}

<div class="row">
  <div class="large-12 columns">
    <br>
    <h4 align="center">Add New Subject</h4>
    <hr/>
    <br>
    <fieldset>
      <legend>Please use the form below</legend>
      <br>
      <form>

        <div class="row">
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Name</span>
              </div>
              <div class="small-9 columns">
                {{input value=name  type="text" placeholder="enter name"}}
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Description</span>
              </div>
              <div class="small-9 columns">
                {{input value=description  type="text" placeholder="enter description"}}
              </div>
            </div>
          </div>
        </div>

      </form>
    </fieldset>
    <br>
    <a href="#" class="button primary tiny" {{action 'saveHighschoolsubject'}}>Save</a>
    <a href="#" class="button primary tiny" {{action 'cancelHighschoolsubject'}}>Cancel</a>
  </div>
</div>



{{else}}
<div class="row">
  <div class="large-12 columns">
    <a href="#" class="button tiny notmain" {{action 'addHighschoolsubject'}}>Add Subject</a>
  </div>
</div>
{{/if}}