{{#if  isManagingDepartment }}
  <div class="row">
    <div class="large-12 columns">
      <br>
      <h3 align="center">Add New Department</h3>
      <hr/>
      <br>
      <fieldset>
        <legend>Please use the form below</legend>
        <br>
        <form>
          <div class="row">
            <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Faculty</span>
                </div>
                <div class="small-9 columns">
                  <select onchange={{action (mut selectedFaculty) value="target.value"}}>
                    {{#each facultyModel as |facultyChoice|}}
                        <option value={{facultyChoice.id}} selected={{eq selectedFaculty facultyChoice}}>{{facultyChoice.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <br>
            </div>  

            <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Name</span>
                </div>
                <div class="small-9 columns">
                  {{input value=name  type="text" placeholder="enter name"}}
                </div>
              </div>
            </div>
          </div>
        </form>
      </fieldset>
      <br>
      <a href="#" class="button radius" {{action 'saveDepartment'}}>Save</a>
      <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
    </div>
  </div>
{{else}}
    <div class="row">
        <div class="large-12 columns">
            <a href="#" class="button round main" {{action 'addNewDepartment'}}>Add New Department</a>
        </div>
    </div>
{{/if}}