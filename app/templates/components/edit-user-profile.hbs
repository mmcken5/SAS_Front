{{#if (not-eq oudaAuth.getName "Root")}}
  {{#if EUP01IsPermitted }}
    <div class="row">
        <div class="large-12 columns">
            <h3 align="center">Modify {{getUser}} {{userProfile.firstName}} {{userProfile.lastName}}'s Profile</h3>
            <form class="studentsbox">
                <div class="row">
                    <div class="large-12 columns">
                        <div class="row">
                            <div class="small-3 columns">
                                <label class="right">First Name</label>
                            </div>
                            <div class="small-9 columns" class="left">
                              {{input value=userProfile.firstName type="text" placeholder="enter first name" }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="small-3 columns">
                                <label class="right">Last Name</label>
                            </div>
                            <div class="small-9 columns" class="left">
                              {{input value=userProfile.lastName type="text" placeholder="enter last name"}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="small-3 columns">
                                <label class="right">Email Address</label>
                            </div>
                            <div class="small-9 columns" class="left">
                              {{input value=userProfile.email type="text" placeholder="enter email address"}}
                            </div>
                        </div>

                      {{#if  isChangingPassword }}
                          <div class="row">
                              <div class="small-3 columns">
                                  <label class="right">Old Password</label>
                              </div>
                              <div class="small-9 columns" class="left">
                                {{input value=oldPassword type="password" placeholder="enter old password"}}
                              </div>
                          </div>
                          <div class="row">
                              <div class="small-3 columns">
                                  <label class="right">New Password</label>
                              </div>
                              <div class="small-9 columns" class="left">
                                {{input value=newPassword1 type="password" placeholder="enter new password"}}
                              </div>
                          </div>
                          <div class="row">
                              <div class="small-3 columns">
                                  <label class="right">New Password Again</label>
                              </div>
                              <div class="small-9 columns" class="left">
                                {{input value=newPassword2 type="password" placeholder="enter new password again"}}
                              </div>
                          </div>
                          <div class="row">
                              <div class="small-3 columns">
                                  <p></p>
                              </div>
                              <div class="small-9   columns" class="left">
                                  <a href="#" class="button info tiny other" {{action 'cancelChangePassword'}}>Cancel
                                      Change Password</a>
                              </div>
                          </div>
                      {{else}}
                          <div class="row">
                              <div class="small-3 columns">
                                  <label class="right">Password</label>
                              </div>
                              <div class="small-9 columns" class="left">
                                  <a href="#" class="button info tiny other" {{action 'changePassword'}}>Change
                                      password</a>
                              </div>
                          </div>

                      {{/if}}

                    </div>
                </div>
            </form>
            <br>
            <a href="#" class="button primary tiny" {{action 'saveUser'}}>Save</a>
            <a href="#" class="button primary tiny" {{action 'cancel'}}>Cancel</a>
        </div>
    </div>
{{else}}
    <div>
        <br>
        <h3>Edit User Profile functionality (EUP01) is not available for your account.</h3>
        <h3>Please contact the system administrator for more details.</h3>
    </div>
{{/if}}
{{else}}
    <div>
        <br>
        <h2>Not available for Root user</h2>
    </div>
{{/if}}
