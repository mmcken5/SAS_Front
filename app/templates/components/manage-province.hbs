{{#if isManagingProvince}}
<div class="row">
  <div class="large-12 columns">
    <h4 align="center"> Manage Province</h4>
  </div>
</div>

<div class="row">
  <div class="large-10  large-centered columns">
    <div class="panel">
      {{#if isAddingNewProvince}}
      <h4>Add new province</h4>
      <form>
        <div class="row">
          <div class="large-12 columns">

            <div class="large-12 columns">
              <div class="row collapse prefix-radius">
                <div class="small-3 columns">
                  <span class="prefix">Country</span>
                </div>
                <div class="small-9 columns">
                  <select onchange={{action (mut selectedCountry) value="target.value"}}>
                    {{#each countryModel as |countryChoice|}}
                    <option value={{countryChoice.id}} selected={{eq selectedCountry countryChoice}}>{{countryChoice.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
            </div>
            <label>Name
              {{input value=selectedProvince  type="text" }}
            </label>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="large-12 columns">
          <a href="#" class="button primary tiny" {{action 'saveNewProvince'}}>Save</a>
          <a href="#" class="button primary tiny" {{action 'cancelAddNewProvince'}}>Cancel</a>
        </div>
      </div>
      <br>
      {{else}}
      <table>
          <tr>
          <th>
            Province
          </th>
          <th>
            Delete
          </th>
        </tr>
      {{#each provinceModel as |oneProvince|}}
<!--       <div class="row">
        <li class="large-3 columns">  {{oneProvince.name}} </li>
        {{delete-province ID=oneProvince.id }}
      </div> -->
      <tr>
        <td>
          {{oneProvince.name}}
        </td>
        <td>
          {{delete-province ID=oneProvince.id }}
        </td>
      </tr>
      {{/each}}
    </table>
      <div class="row">
        <div class="large-12 columns">
          <br> 
          <a href="#" class="button primary tiny full" {{action 'addNewProvince'}}>Add new province</a>
          <a href="#" class="button primary tiny" {{action 'doneProvince'}}>Done</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{else}}
<div class="large-2 columns">
  <a href="#" class="button round tiny" {{action 'manageProvince' }}>More</a>
</div>
{{/if}}



