{{#if  isManagingProgram }}
<div class="row">
  <div class="large-12 columns">
    <br>
    <h3 align="center">Add New Academic Program Code</h3>
    <hr/>
    <br>
    <fieldset>
      <legend>Please use the form below</legend>
      <br>
      <form>
        <div class="row">
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Admission Rule</span>
              </div>
              <div class="small-9 columns">
                <select onchange={{action (mut selectedAdmissionrule) value="target.value"}}>
                  {{#each admissionruleModel as |admissionruleChoice|}}
                  <option value={{admissionruleChoice.id}} selected={{eq selectedAdmissionrule admissionruleChoice}}>{{admissionruleChoice.description}}</option>
                  {{/each}}
                </select>
              </div>
            </div>
            <br>
          </div>
        </div>
        <div class="row">
          <div class="large-12 columns">
            <div class="row collapse prefix-radius">
              <div class="small-3 columns">
                <span class="prefix">Program Name</span>
              </div>
              <div class="small-9 columns">
                {{input value=name type="text" placeholder="enter program name" }}
              </div>
            </div>
            <br>
          </div>
        </div>
      </form>
    </fieldset>
    <br>
    <a href="#" class="button radius" {{action 'saveP'}}>Save</a>
    <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
  </div>
</div>
{{else}}
<div class="row">
  <div class="large-12 columns">
    <a href="#" class="button round main" {{action 'addProgram'}}>Add New Academic Program Code</a>
  </div>
</div>
{{/if}}