{{#if  isProgramplacementFormEditing }}

<div class="large-12 columns">
	<div class="row collapse prefix-radius">
		<div class="small-3 columns">
			<span class="prefix"> Program</span>
		</div>
		<div class="small-9 columns">
			<select onchange={{action (mut selectedAcademicprogramcode) value='target.value'}}>
				<option selected="true" disabled="disabled">Select Program</option>  
				{{#each academicprogramcodeModel as |academicprogramcodeChoice|}}
				<option value={{academicprogramcodeChoice.id}} selected={{eq selectedAcademicprogramcode academicprogramcodeChoice}}>{{academicprogramcodeChoice.name}}</option>
				{{/each}}
			</select>
		</div>
	</div>
	<br>
	<a href="#" class="button primary tiny" {{action 'saveProgramplacement'}}>Save</a>
	<a href="#" class="button primary tiny" {{action 'cancel'}}>Cancel</a>
</div>


{{else}}

<a href="#" class="button primary tiny table"  {{action 'editProgramplacement' ID}}>Edit</a>

{{/if}}