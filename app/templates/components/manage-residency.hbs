{{#if isManagingResidency}}
<div class="row">
  <div class="large-12 columns">
    <h4 align="center"> Manage Residency</h4>
  </div>
</div>

<div class="row">
  <div class="large-10  large-centered columns">
    <div class="panel">
      {{#if isAddingNewResidency}}
      <h4>Add new residency</h4>
      <form>
        <div class="row">
          <div class="large-12 columns">
            <label>Name
              {{input value=name  type="text" }}
            </label>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="large-12 columns">
          <a href="#" class="button primary tiny" {{action 'saveNewResidency'}}>Save</a>
          <a href="#" class="button primary tiny" {{action 'cancelAddNewResidency'}}>Cancel</a>
        </div>
      </div>
      <br>
      {{else}}
       <table>
         <tr>
          <th>
            Residency
          </th>
          <th>
            Delete
          </th>
        </tr>
      {{#each residencyModel as |oneResidency|}}
<!--       <div class="row">
        <li class="large-3 columns">  {{oneResidency.name}} </li>
        {{delete-residency ID=oneResidency.id }}
      </div> -->
      <tr>
        <td>
          {{oneResidency.name}}
        </td>
        <td>
          {{delete-residency ID=oneResidency.id }}
        </td>
      </tr>
      {{/each}}
    </table>
      <div class="row">
        <div class="large-12 columns">
          <br>
          <a href="#" class="button primary tiny full" {{action 'addNewResidency'}}>Add new residency</a>
          <a href="#" class="button primary tiny" {{action 'doneResidency'}}>Done</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{else}}
<div class="large-2 columns">
  <a href="#" class="button round tiny" {{action 'manageResidency' }}>More</a>
</div>
{{/if}}


