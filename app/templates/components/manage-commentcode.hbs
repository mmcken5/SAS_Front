{{#if  isCommentcodeFormEditing }}
<div class="row">
    <div class="large-12 columns">
        <br>
        <h3 align="center">Add New Comment Code</h3>
        <hr/>
        <br>
        <fieldset>
            <legend>Please use the form below</legend>
            <br>
            <form>
                <div class="row">
                    <div class="large-12 columns">

                        <div class="large-12 columns">
                            <div class="row collapse prefix-radius">
                                <div class="small-3 columns">
                                    <span class="prefix">Code</span>
                                </div>
                                <div class="small-9 columns">
                                    {{input value=code type="text" placeholder="enter code" }}
                                </div>
                            </div>
                        </div>

                        <div class="large-12 columns">
                            <div class="row collapse prefix-radius">
                                <div class="small-3 columns">
                                    <span class="prefix">Prog Action</span>
                                </div>
                                <div class="small-9 columns">
                                    {{input value=progaction type="text" placeholder="enter prog action" }}
                                </div>
                            </div>
                        </div>

                        <div class="large-12 columns">
                            <div class="row collapse prefix-radius">
                                <div class="small-3 columns">
                                    <span class="prefix">Description</span>
                                </div>
                                <div class="small-9 columns">
                                    {{input value=description type="text" placeholder="enter description" }}
                                </div>
                            </div>
                        </div>


                        <div class="large-12 columns">
                            <div class="row collapse prefix-radius">
                                <div class="small-3 columns">
                                    <span class="prefix">Notes</span>
                                </div>
                                <div class="small-9 columns">
                                    {{input value=notes type="text" placeholder="enter notes" }}
                                </div>
                            </div>
                        </div>

                        <div class="large-12 columns">
                            <div class="row collapse prefix-radius">
                                <div class="small-3 columns">
                                    <span class="prefix">Distribution Result</span>
                                </div>
                                <div class="small-9 columns">
                                    <select onchange={{action (mut selectedDistributionresult) value="target.value"}}>
                                        {{#each distributionresultModel as |distributionresultChoice|}}
                                        <option value={{distributionresultChoice.id}} selected={{eq selectedDistributionresult distributionresultChoice}}>{{distributionresultChoice.date}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </fieldset>
        <br>
        <a href="#" class="button radius" {{action 'saveCommentcode'}}>Save</a>
        <a href="#" class="button radius" {{action 'cancel'}}>Cancel</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="large-12 columns">
        <a href="#" class="button round main" {{action 'addNewCommentcode'}}>Add New Comment Code</a>
    </div>
</div>
{{/if}}

