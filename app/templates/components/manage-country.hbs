{{#if isManagingCountry}}
<div class="row">
  <div class="large-12 columns">
    <h4 align="center"> Manage Country</h4>
  </div>
</div>

<div class="row">
  <div class="large-10  large-centered columns">
    <div class="panel">
      {{#if isAddingNewCountry}}
      <h4>Add new Country</h4>
      <form>
        <div class="row">
          <div class="large-12 columns">
            <label>Name
              {{input value=selectedCountry  type="text" }}
            </label>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="large-12 columns">
          <a href="#" class="button primary tiny" {{action 'saveNewCountry'}}>Save</a>
          <a href="#" class="button primary tiny full" {{action 'cancelAddNewCountry'}}>Cancel</a>
        </div>
      </div>
      <br>
      {{else}}
      <table>
         <tr>
          <th>
            Country
          </th>
          <th>
            Delete
          </th>
        </tr>
      {{#each countryModel as |oneCountry|}}
<!--       <div class="row">
        <li class="large-3 columns">  {{oneCountry.name}} </li>
        {{delete-country ID=oneCountry.id }}
      </div> -->
      <tr>
        <td>
          {{oneCountry.name}}
        </td>
        <td>
          {{delete-country ID=oneCountry.id }}
        </td>
      </tr>
      {{/each}}
    </table>
      <div class="row">
        <div class="large-12 columns">
          <br> 
          <a href="#" class="button primary tiny full" {{action 'addNewCountry'}}>Add new country</a>
          <a href="#" class="button primary tiny" {{action 'doneCountry'}}>Done</a>
        </div>
      </div>
      {{/if}}
    </div>
  </div>
</div>

{{else}}
<div class="large-2 columns">
  <a href="#" class="button round tiny" {{action 'manageCountry' }}>More</a>
</div>
{{/if}}



